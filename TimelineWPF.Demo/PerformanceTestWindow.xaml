<Window x:Class="TimelineWPF.Demo.PerformanceTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Event Bus Performance Comparison"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Event Bus Performance Test"
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Label Content="Number of Events:"/>
            <TextBox x:Name="EventCountBox" Text="10000" Width="100" VerticalAlignment="Center"/>
            <Label Content="Number of Subscribers:" Margin="20,0,0,0"/>
            <TextBox x:Name="SubscriberCountBox" Text="10" Width="50" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Standard Event Bus Results -->
            <GroupBox Grid.Column="0" Header="Standard Event Bus" Margin="0,0,10,0">
                <StackPanel Margin="10">
                    <TextBlock x:Name="StandardStatusText" Text="Ready" FontWeight="Bold"/>
                    <TextBlock x:Name="StandardTimeText" Text="Time: -" Margin="0,10,0,0"/>
                    <TextBlock x:Name="StandardThroughputText" Text="Throughput: -"/>
                    <TextBlock x:Name="StandardMemoryText" Text="Memory: -" Margin="0,10,0,0"/>
                    <ProgressBar x:Name="StandardProgress" Height="20" Margin="0,20,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Optimized Event Bus Results -->
            <GroupBox Grid.Column="1" Header="Optimized Event Bus" Margin="10,0,0,0">
                <StackPanel Margin="10">
                    <TextBlock x:Name="OptimizedStatusText" Text="Ready" FontWeight="Bold"/>
                    <TextBlock x:Name="OptimizedTimeText" Text="Time: -" Margin="0,10,0,0"/>
                    <TextBlock x:Name="OptimizedThroughputText" Text="Throughput: -"/>
                    <TextBlock x:Name="OptimizedMemoryText" Text="Memory: -" Margin="0,10,0,0"/>
                    <ProgressBar x:Name="OptimizedProgress" Height="20" Margin="0,20,0,0"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="RunTestBtn" Content="Run Performance Test"
                    Click="RunTestBtn_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="CloseBtn" Content="Close"
                    Click="CloseBtn_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>