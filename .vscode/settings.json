{
  // Markdown Preview Settings - Fixed-width font for diagrams
  "markdown.preview.fontFamily": "Consolas, 'Courier New', Monaco, monospace",
  "markdown.preview.fontSize": 13,
  "markdown.preview.lineHeight": 1.2,

  // Use custom CSS for markdown preview
  "markdown.styles": [
    ".vscode/markdown-preview.css"
  ],

  // Editor Settings - Ensure monospace for markdown files
  "[markdown]": {
    "editor.fontFamily": "Consolas, 'Courier New', Monaco, monospace",
    "editor.fontSize": 14,
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "boundary"
  },

  // Ensure code blocks render properly
  "editor.fontLigatures": false
}
