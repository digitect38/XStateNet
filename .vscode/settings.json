{
  // General Editor Font Settings
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "ğŸ¯": true,
    "âœ…": true,
    "âŒ": true,
    "âš ": true,
    "ğŸ“Š": true,
    "ğŸš€": true,
    "ğŸ”§": true,
    "ğŸ¤–": true
  },

  // Terminal Font Settings
  "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, monospace",
  "terminal.integrated.fontSize": 14,

  // Markdown Preview Settings - Fixed-width font for diagrams
  "markdown.preview.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
  "markdown.preview.fontSize": 13,
  "markdown.preview.lineHeight": 1.2,

  // Use custom CSS for markdown preview
  "markdown.styles": [
    ".vscode/markdown-preview.css"
  ],

  // Editor Settings - Ensure monospace for markdown files
  "[markdown]": {
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
    "editor.fontSize": 14,
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "boundary"
  },
  "files.associations": {
    "*.sfl": "semiflow"
  }
}
