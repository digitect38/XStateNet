{
  // General Editor Font Settings
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "üéØ": true,
    "‚úÖ": true,
    "‚ùå": true,
    "‚ö†": true,
    "üìä": true,
    "üöÄ": true,
    "üîß": true,
    "ü§ñ": true
  },

  // Terminal Font Settings
  "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, monospace",
  "terminal.integrated.fontSize": 14,

  // Markdown Preview Settings - Fixed-width font for diagrams
  "markdown.preview.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
  "markdown.preview.fontSize": 13,
  "markdown.preview.lineHeight": 1.2,

  // Use custom CSS for markdown preview
  "markdown.styles": [
    ".vscode/markdown-preview.css"
  ],

  // Editor Settings - Ensure monospace for markdown files
  "[markdown]": {
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', Monaco, monospace",
    "editor.fontSize": 14,
    "editor.wordWrap": "off",
    "editor.renderWhitespace": "boundary"
  },
  "files.associations": {
    "*.sfl": "semiflow"
  },
  
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "source.sfl",
        "settings": {
          "foreground": "#D4D4D4"
        }
      },
      {
        "name": "SFL Keywords",
        "scope": "source.sfl keyword.control",
        "settings": {
          "foreground": "#569CD6",
          "fontStyle": "bold"
        }
      },
      {
        "name": "SFL Schedulers", 
        "scope": "source.sfl entity.name.class",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "name": "SFL Layers",
        "scope": "source.sfl constant.language",
        "settings": {
          "foreground": "#9CDCFE"
        }
      },
      {
        "name": "SFL Wafers",
        "scope": "source.sfl variable.other",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "name": "SFL Rules",
        "scope": "source.sfl string.quoted",
        "settings": {
          "foreground": "#D7BA7D"
        }
      }
    ]
  },
  
  // ÌäπÏ†ï Ìå®ÌÑ¥Ïóê ÎåÄÌïú ÌïòÏù¥ÎùºÏù¥ÌåÖ
  "highlight.regexes": {
    "(MASTER_SCHEDULER|WAFER_SCHEDULER|ROBOT_SCHEDULER|STATION)": {
      "decorations": [
        {
          "color": "#569CD6",
          "fontWeight": "bold"
        }
      ]
    },
    "(MSC_|WSC_|RSC_)[0-9]+": {
      "decorations": [
        {
          "color": "#4EC9B0"
        }
      ]
    },
    "L[1-4]": {
      "decorations": [
        {
          "color": "#9CDCFE"
        }
      ]
    },
    "W[0-9]+": {
      "decorations": [
        {
          "color": "#CE9178"
        }
      ]
    },
    "(WAR_|PSR_|SSR_)[0-9]+": {
      "decorations": [
        {
          "color": "#D7BA7D"
        }
      ]
    },
    "APPLY_RULE|VERIFY|CONFIG|SCHEDULE": {
      "decorations": [
        {
          "color": "#C586C0"
        }
      ]
    }
  }
  
}
