<UserControl x:Class="CMPSimulator.Controls.CMPSystemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid MaxWidth="1920" MaxHeight="1080">
        <!-- Background floor/base layer -->
        <Border Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="2" CornerRadius="4">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <!-- Grid lines canvas (behind stations) -->
        <Canvas x:Name="GridCanvas" Background="Transparent" MaxWidth="1920" MaxHeight="1080"/>

        <!-- Canvas for placing stations -->
        <Canvas x:Name="StationCanvas" Background="Transparent" MaxWidth="1920" MaxHeight="1080"/>

        <!-- System info overlay (top-left corner) -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Border Background="White" BorderBrush="#007ACC" BorderThickness="2"
                    CornerRadius="4" Padding="8">
                <StackPanel>
                    <TextBlock Text="CMP System" FontWeight="Bold" FontSize="14"
                              Foreground="#007ACC" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <TextBlock Text="Total Wafers: " FontSize="12" Foreground="#333" Width="90"/>
                        <TextBlock x:Name="TotalWaferCountText" Text="0" FontSize="12"
                                  FontWeight="Bold" Foreground="#007ACC"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                        <TextBlock Text="  Pre-Process: " FontSize="11" Foreground="#666" Width="90"/>
                        <TextBlock x:Name="PreProcessCountText" Text="0" FontSize="11"
                                  FontWeight="SemiBold" Foreground="#FF6B35"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="  Post-Process: " FontSize="11" Foreground="#666" Width="90"/>
                        <TextBlock x:Name="PostProcessCountText" Text="0" FontSize="11"
                                  FontWeight="SemiBold" Foreground="#4CAF50"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
