<UserControl x:Class="CMPSimulator.Controls.StateTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CMPSimulator.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">

    <UserControl.Resources>
        <local:HighlightToBrushConverter x:Key="HighlightConverter"/>
        <local:NodeTypeToIconConverter x:Key="NodeTypeIconConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10,5">
            <TextBlock Text="System State Hierarchy"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="14"/>
        </Border>

        <!-- Tree View -->
        <TreeView Grid.Row="1"
                  x:Name="StateTree"
                  Background="White"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  Margin="5"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                    <Setter Property="FontFamily" Value="Consolas"/>
                    <Setter Property="Margin" Value="0,2"/>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <Border CornerRadius="3"
                            Padding="5,2"
                            Margin="2"
                            BorderThickness="{Binding IsHighlighted, Converter={StaticResource HighlightConverter}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                        <Setter Property="BorderBrush" Value="#0078D7"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal">
                            <!-- Node Type Icon (hide for State nodes) -->
                            <TextBlock Text="{Binding NodeType, Converter={StaticResource NodeTypeIconConverter}}"
                                       FontSize="12"
                                       Margin="0,0,5,0"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding NodeType}" Value="State">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Display Name -->
                            <TextBlock Text="{Binding DisplayName}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <!-- State nodes: make active ones bold green, inactive ones gray -->
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding NodeType}" Value="State"/>
                                                    <Condition Binding="{Binding IsActive}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#22C55E"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding NodeType}" Value="State"/>
                                                    <Condition Binding="{Binding IsActive}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                                <Setter Property="FontWeight" Value="Normal"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- Current State Badge (hide for State nodes) -->
                            <Border Background="{Binding StateBrush}"
                                    CornerRadius="10"
                                    Padding="8,2"
                                    BorderBrush="#999999"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding NodeType}" Value="State">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding CurrentState}"
                                           FontSize="10"
                                           Foreground="White"
                                           FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
