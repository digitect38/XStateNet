<Window x:Class="CMPSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:CMPSimulator.Controls"
        mc:Ignorable="d"
        Title="CMP Tool Simulator - Forward Priority Scheduler" Height="700" Width="1400"
        Background="#F0F0F0"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Window.Resources>
        <!-- Station Style -->
        <Style x:Key="StationStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Wafer Style -->
        <Style x:Key="WaferStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Stroke" Value="#333333"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Button x:Name="StartButton" Content="â–¶ Start" Style="{StaticResource ControlButtonStyle}" Click="StartButton_Click"/>
                    <Button x:Name="StepButton" Content="â­ Step" Style="{StaticResource ControlButtonStyle}" Click="StepButton_Click"/>
                    <Button x:Name="StopButton" Content="â¸ Pause" Style="{StaticResource ControlButtonStyle}" Click="StopButton_Click" IsEnabled="False"/>
                    <Button x:Name="ResetButton" Content="â†» Reset" Style="{StaticResource ControlButtonStyle}" Click="ResetButton_Click"/>

                    <!-- Edit Mode Toggle -->
                    <Border Background="#E8E8E8" CornerRadius="4" Padding="10,5" Margin="15,0,0,0">
                        <CheckBox x:Name="EditModeCheckBox" Content="âœ Edit Mode"
                                  FontWeight="SemiBold" FontSize="12"
                                  VerticalAlignment="Center"
                                  Checked="EditMode_Checked" Unchecked="EditMode_Unchecked"/>
                    </Border>

                    <!-- Mode Toggle Switch -->
                    <Border Background="#E8E8E8" CornerRadius="4" Padding="10,5" Margin="5,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Mode:" FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <RadioButton x:Name="AsyncModeRadio" Content="Async" GroupName="ExecutionMode"
                                       IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0"
                                       Checked="ExecutionMode_Changed"/>
                            <RadioButton x:Name="SyncModeRadio" Content="Sync" GroupName="ExecutionMode"
                                       VerticalAlignment="Center"
                                       Checked="ExecutionMode_Changed"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="CMP Tool - Forward Priority Scheduler" FontSize="18" FontWeight="Bold"
                          HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333333" Width="657"/>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock x:Name="StatisticsTextBlock" Text="Ready" FontSize="11" FontFamily="Consolas"
                              Foreground="#007ACC" FontWeight="SemiBold" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area (Simulation + Log) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Simulation Area (Left) -->
            <ScrollViewer x:Name="SimulationScrollViewer" Grid.Column="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#E8E8E8">
                <controls:CMPSystemControl x:Name="CMPSystem" Width="1920" Height="1080" MaxWidth="1920" MaxHeight="1080"/>
            </ScrollViewer>

            <!-- GridSplitter for resizing -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#CCCCCC"
                          ShowsPreview="False"
                          Cursor="SizeWE"/>

            <!-- TabControl Panel (Right) - Property and Log -->
            <Border Grid.Column="2" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                <TabControl>
                    <!-- Property Tab -->
                    <TabItem Header="Property">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <!-- Selected Object Info -->
                                <TextBlock x:Name="SelectedObjectNameText" Text="No Object Selected"
                                          FontWeight="Bold" FontSize="16" Margin="0,0,0,15"
                                          Foreground="#007ACC"/>

                                <Separator Margin="0,0,0,15"/>

                                <!-- Property Grid Container -->
                                <StackPanel x:Name="PropertyGridContainer">
                                    <TextBlock Text="Select a station to view its properties"
                                              FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>

                                <Separator Margin="0,15,0,15"/>

                                <!-- Global Station Timing Section -->
                                <TextBlock Text="Global Station Timing (ms)" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <!-- R1 Transfer Time -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="R1 Transfer:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="R1TransferTextBox" Grid.Row="0" Grid.Column="1" Text="1000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- Polisher Processing Time -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Polisher:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="PolisherTextBox" Grid.Row="1" Grid.Column="1" Text="5000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- R2 Transfer Time -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="R2 Transfer:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="R2TransferTextBox" Grid.Row="2" Grid.Column="1" Text="1000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- Cleaner Processing Time -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Cleaner:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="CleanerTextBox" Grid.Row="3" Grid.Column="1" Text="3000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- R3 Transfer Time -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="R3 Transfer:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="R3TransferTextBox" Grid.Row="4" Grid.Column="1" Text="1000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- Buffer Hold Time -->
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Buffer Hold:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="BufferHoldTextBox" Grid.Row="5" Grid.Column="1" Text="0"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>

                                    <!-- LoadPort Transfer Time -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="LoadPort Return:" VerticalAlignment="Center"/>
                                    <TextBox x:Name="LoadPortReturnTextBox" Grid.Row="6" Grid.Column="1" Text="1000"
                                             VerticalAlignment="Center" Padding="5,3" Margin="0,0,0,5"
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </Grid>

                                <!-- Apply Button -->

                                <TextBlock x:Name="SettingsStatusTextBlock" Text=""
                                           Foreground="Green" FontSize="10"
                                           Margin="0,5,0,0" TextAlignment="Center"/>
                                <Button x:Name="ApplySettingsButton" Content="Apply Settings"
                                        Style="{StaticResource ControlButtonStyle}"
                                        Click="ApplySettingsButton_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Log Tab -->
                    <TabItem Header="Log">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                                <Grid>
                                    <TextBlock Text="Simulation Log" FontWeight="Bold" Margin="10,5" VerticalAlignment="Center"/>
                                    <Button x:Name="OpenLogButton" Content="ðŸ“„ Open Log"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,10,0"
                                            Padding="8,3"
                                            FontSize="10"
                                            Background="#007ACC"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="OpenLogButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="3"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#005A9E"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>

                            <TextBox x:Name="LogTextBlock" Grid.Row="1"
                                     FontFamily="Consolas" FontSize="11"
                                     Margin="10" Foreground="#333333"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled"
                                     Background="White"
                                     BorderThickness="0">
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ì „ì²´ ì„ íƒ(_A)" Click="SelectAllLog_Click" InputGestureText="Ctrl+A"/>
                                        <MenuItem Header="ë³µì‚¬(_C)" Click="CopyLog_Click" InputGestureText="Ctrl+C"/>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>
