{
  "Redis": {
    "ConnectionString": "localhost:6379",
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000,
    "AllowAdmin": false,
    "AbortOnConnectFail": false
  },
  "Resilience": {
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "SuccessThreshold": 2,
      "TimeoutDuration": "00:00:30",
      "SlidingWindowSize": 10,
      "MinimumThroughput": 10,
      "DurationOfBreak": "00:01:00",
      "HandledExceptionTypes": [
        "System.TimeoutException",
        "System.Net.Http.HttpRequestException",
        "System.IO.IOException"
      ]
    },
    "RetryPolicy": {
      "MaxRetryAttempts": 3,
      "InitialDelay": "00:00:01",
      "MaxDelay": "00:01:00",
      "BackoffMultiplier": 2.0,
      "JitterStrategy": "Full",
      "RetryableExceptionTypes": [
        "System.TimeoutException",
        "System.Net.Http.HttpRequestException",
        "System.IO.IOException"
      ]
    },
    "DeadLetterQueue": {
      "MaxRetries": 3,
      "RetryDelay": "00:00:05",
      "MaxQueueSize": 10000,
      "DefaultTtl": "7.00:00:00",
      "EnableAutoRetry": true,
      "BatchSize": 100,
      "ProcessingInterval": "00:00:30",
      "EnableMetrics": true
    },
    "TimeoutProtection": {
      "DefaultTimeout": "00:00:30",
      "EnableAdaptiveTimeout": true,
      "AdaptiveTimeoutMultiplier": 1.5,
      "MaxTimeout": "00:05:00",
      "MinTimeout": "00:00:01",
      "HistorySize": 100,
      "PercentileForAdaptive": 95,
      "EnableMetrics": true,
      "RetryOnTimeout": true,
      "MaxRetryAttempts": 2
    }
  },
  "StateMachines": {
    "Default": {
      "TimeoutProtection": {
        "DefaultStateTimeout": "00:00:10",
        "DefaultTransitionTimeout": "00:00:05",
        "DefaultActionTimeout": "00:00:02",
        "EnableDlqOnTimeout": true,
        "StateTimeouts": {
          "Processing": "00:00:30",
          "Waiting": "00:01:00",
          "Error": "00:00:05"
        },
        "TransitionTimeouts": {
          "Start->Processing": "00:00:02",
          "Processing->Complete": "00:00:10"
        }
      }
    }
  },
  "Channels": {
    "Bounded": {
      "DefaultCapacity": 1000,
      "DefaultBackpressureStrategy": "Wait",
      "EnableBatching": true,
      "BatchSize": 100,
      "BatchTimeout": "00:00:01",
      "EnableMetrics": true
    },
    "Priority": {
      "DefaultCapacityPerPriority": 500,
      "PriorityCount": 4,
      "DefaultStrategy": "StrictPriority",
      "EnableMultiplexing": true,
      "EnableLoadBalancing": true,
      "EnableMetrics": true
    }
  },
  "Monitoring": {
    "Tracing": {
      "ServiceName": "XStateNet.Distributed",
      "ServiceVersion": "1.0.0",
      "OtlpEndpoint": "http://localhost:4317",
      "EnableTracing": true,
      "SamplingRatio": 0.1,
      "ExportInterval": "00:00:10",
      "MaxExportBatchSize": 512
    },
    "Metrics": {
      "EnableMetrics": true,
      "MetricsPort": 9090,
      "MetricsPath": "/metrics",
      "CollectionInterval": "00:00:15",
      "HistogramBuckets": [0.001, 0.005, 0.01, 0.025, 0.05, 0.1, 0.25, 0.5, 1, 2.5, 5, 10],
      "EnableDetailedMetrics": true
    },
    "HealthCheck": {
      "Enabled": true,
      "Port": 8080,
      "Path": "/health",
      "LivenessPath": "/health/live",
      "ReadinessPath": "/health/ready"
    },
    "Alerting": {
      "Enabled": true,
      "AlertingRules": [
        {
          "Name": "HighErrorRate",
          "Query": "rate(xstatenet_errors_total[5m]) > 0.05",
          "Severity": "Critical",
          "For": "00:05:00"
        },
        {
          "Name": "CircuitBreakerOpen",
          "Query": "xstatenet_circuit_breaker_state == 2",
          "Severity": "Warning",
          "For": "00:01:00"
        },
        {
          "Name": "DeadLetterQueueHigh",
          "Query": "xstatenet_dlq_size > 1000",
          "Severity": "Warning",
          "For": "00:10:00"
        }
      ]
    }
  },
  "Security": {
    "Authentication": {
      "Enabled": true,
      "JwtSecret": "your-256-bit-secret-key-change-this-in-production",
      "TokenExpiration": "01:00:00",
      "RefreshTokenExpiration": "7.00:00:00",
      "Issuer": "XStateNet",
      "Audience": "XStateNet.Distributed"
    },
    "Authorization": {
      "Enabled": true,
      "DefaultPolicy": "Authenticated",
      "Roles": [
        {
          "Name": "Admin",
          "Permissions": ["*"]
        },
        {
          "Name": "Operator",
          "Permissions": ["read", "write", "execute"]
        },
        {
          "Name": "Observer",
          "Permissions": ["read"]
        }
      ]
    },
    "RateLimiting": {
      "Enabled": true,
      "WindowSize": "00:01:00",
      "MaxRequests": 1000,
      "EnablePerUserLimiting": true,
      "PerUserMaxRequests": 100
    },
    "Encryption": {
      "Enabled": true,
      "Algorithm": "AES256",
      "KeyRotationInterval": "30.00:00:00"
    }
  }
}