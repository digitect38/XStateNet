<Window x:Class="TimelineWPF.CircuitBreakerSimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimelineWPF"
        mc:Ignorable="d"
        Title="Circuit Breaker Simulator" Height="800" Width="1200"
        Background="#1E1E1E">
    <Window.Resources>
        <!-- Value Converters -->
        <local:StateToStringConverter x:Key="StateToStringConverter"/>
        <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
        <local:StateAnimationConverter x:Key="StateAnimationConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:SeverityToColorConverter x:Key="SeverityToColorConverter"/>

        <!-- State Indicator Styles -->
        <Style x:Key="StateIndicator" TargetType="Border">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Margin" Value="20"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Closed">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#4CAF50" Offset="0"/>
                                <GradientStop Color="#2E7D32" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="Open">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#F44336" Offset="0"/>
                                <GradientStop Color="#B71C1C" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="HalfOpen">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFC107" Offset="0"/>
                                <GradientStop Color="#F57C00" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="SimulatorButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20">
            <TextBlock Text="Circuit Breaker Pattern Simulator" 
                       Foreground="White" FontSize="24" FontWeight="Bold"/>
        </Border>

        <!-- State Visualization -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Closed State -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Style="{StaticResource StateIndicator}" 
                        Tag="{Binding CurrentState, Converter={StaticResource StateToStringConverter}}" 
                        Opacity="{Binding IsClosedState, Converter={StaticResource BoolToOpacityConverter}}">
                    <Grid>
                        <Ellipse Width="100" Height="100" Stroke="White" StrokeThickness="3" 
                                 StrokeDashArray="{Binding IsClosedState, Converter={StaticResource StateAnimationConverter}}"/>
                        <TextBlock Text="CLOSED" Foreground="White" FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <TextBlock Text="Normal Operation" Foreground="#4CAF50" 
                           HorizontalAlignment="Center" FontWeight="Medium"/>
            </StackPanel>

            <!-- Open State -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Style="{StaticResource StateIndicator}" 
                        Tag="{Binding CurrentState, Converter={StaticResource StateToStringConverter}}"
                        Opacity="{Binding IsOpenState, Converter={StaticResource BoolToOpacityConverter}}">
                    <Grid>
                        <Ellipse Width="100" Height="100" Stroke="White" StrokeThickness="3"
                                 StrokeDashArray="{Binding IsOpenState, Converter={StaticResource StateAnimationConverter}}"/>
                        <TextBlock Text="OPEN" Foreground="White" FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <TextBlock Text="Failing Fast" Foreground="#F44336" 
                           HorizontalAlignment="Center" FontWeight="Medium"/>
            </StackPanel>

            <!-- Half-Open State -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Style="{StaticResource StateIndicator}"
                        Tag="{Binding CurrentState, Converter={StaticResource StateToStringConverter}}"
                        Opacity="{Binding IsHalfOpenState, Converter={StaticResource BoolToOpacityConverter}}">
                    <Grid>
                        <Ellipse Width="100" Height="100" Stroke="White" StrokeThickness="3"
                                 StrokeDashArray="{Binding IsHalfOpenState, Converter={StaticResource StateAnimationConverter}}"/>
                        <TextBlock Text="HALF-OPEN" Foreground="White" FontSize="14" FontWeight="Bold"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <TextBlock Text="Testing Recovery" Foreground="#FFC107" 
                           HorizontalAlignment="Center" FontWeight="Medium"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Control Panel -->
            <Border Grid.Column="0" Background="#2D2D30" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Configuration" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Implementation Selection -->
                        <Border Background="#3D3D40" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Implementation:" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                                <TextBlock Text="ðŸŽ¯ Using XStateNet State Machine"
                                           Foreground="#10B981" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="Circuit Breaker is powered by XStateNet!"
                                           Foreground="#808080" FontSize="10" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Failure Threshold -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Failure Threshold:" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding FailureThreshold}" 
                                        Minimum="1" Maximum="10" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1" Text="{Binding FailureThreshold}" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Break Duration -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Break Duration (seconds):" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding BreakDurationSeconds}" 
                                        Minimum="1" Maximum="30" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1" Text="{Binding BreakDurationSeconds}" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Success Count in Half-Open -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Success Count for Recovery:" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding SuccessCountInHalfOpen}" 
                                        Minimum="1" Maximum="5" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1" Text="{Binding SuccessCountInHalfOpen}" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Failure Rate -->
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Service Failure Rate (%):" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding ServiceFailureRate}" 
                                        Minimum="0" Maximum="100" TickFrequency="10"/>
                                <TextBlock Grid.Column="1" Text="{Binding ServiceFailureRate, StringFormat={}{0:F0}%}" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <Separator Background="#3D3D40" Margin="0,20"/>

                        <!-- Action Buttons -->
                        <TextBlock Text="Actions" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <WrapPanel>
                            <Button Content="Send Request" Style="{StaticResource SimulatorButton}" 
                                    Command="{Binding SendRequestCommand}"/>
                            <Button Content="Send Burst" Style="{StaticResource SimulatorButton}" 
                                    Command="{Binding SendBurstCommand}" Background="#FF9800"/>
                            <Button Content="Simulate Recovery" Style="{StaticResource SimulatorButton}" 
                                    Command="{Binding SimulateRecoveryCommand}" Background="#4CAF50"/>
                            <Button Content="Simulate Failure" Style="{StaticResource SimulatorButton}" 
                                    Command="{Binding SimulateFailureCommand}" Background="#F44336"/>
                            <Button Content="Reset" Style="{StaticResource SimulatorButton}" 
                                    Command="{Binding ResetCommand}" Background="#9E9E9E"/>
                        </WrapPanel>

                        <CheckBox Content="Auto-send requests" Foreground="White" Margin="0,15,0,0"
                                  IsChecked="{Binding AutoSendEnabled}"/>
                        
                        <StackPanel Margin="0,10" Visibility="{Binding AutoSendEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="Request Interval (ms):" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" Value="{Binding RequestIntervalMs}" 
                                        Minimum="100" Maximum="2000" TickFrequency="100"/>
                                <TextBlock Grid.Column="1" Text="{Binding RequestIntervalMs}" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Metrics and Logs -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Metrics Panel -->
                <Border Grid.Row="0" Background="#2D2D30" CornerRadius="10" Padding="20" Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Real-time Metrics" Foreground="White" 
                                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Total Requests -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                                <TextBlock Text="Total Requests" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding TotalRequests}" Foreground="White" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Success Rate -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                                <TextBlock Text="Success Rate" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding SuccessRate, StringFormat={}{0:F1}%}" 
                                           Foreground="#4CAF50" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Rejection Rate -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                                <TextBlock Text="Rejection Rate" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding RejectionRate, StringFormat={}{0:F1}%}" 
                                           Foreground="#F44336" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Consecutive Failures -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                                <TextBlock Text="Consecutive Failures" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding ConsecutiveFailures}" Foreground="#FF9800" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Time in Current State -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                                <TextBlock Text="Time in State (s)" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding TimeInCurrentState, StringFormat={}{0:F1}}" 
                                           Foreground="White" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>

                            <!-- Recovery Attempts -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                                <TextBlock Text="Recovery Attempts" Foreground="#B0B0B0" FontSize="12"/>
                                <TextBlock Text="{Binding RecoveryAttempts}" Foreground="#2196F3" FontSize="28" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Event Log -->
                <Border Grid.Row="1" Background="#2D2D30" CornerRadius="10" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Event Log" Foreground="White" 
                                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding EventLog}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#3D3D40" BorderThickness="0,0,0,1" Padding="5,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}" 
                                                           Foreground="#808080" FontFamily="Consolas" FontSize="11"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Message}" 
                                                           Foreground="{Binding Severity, Converter={StaticResource SeverityToColorConverter}}" 
                                                           TextWrapping="Wrap" FontSize="12"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " Foreground="White" FontWeight="Medium"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Circuit Breaker: " Foreground="White" FontWeight="Medium"/>
                    <TextBlock Text="{Binding CurrentStateText}" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>