{
  "name": "semiflow-language",
  "displayName": "Semi Flow Language",
  "description": "Language support for Semi Flow Language (SFL) - semiconductor manufacturing scheduling DSL with diagnostics, hover, completion, and state machine visualization",
  "version": "3.0.0",
  "publisher": "semiconductor-mfg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/semiconductor-mfg/semiflow-language"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:semiflow",
    "onCommand:semiflow.visualize",
    "onCommand:semiflow.visualizeJson"
  ],
  "contributes": {
    "languages": [
      {
        "id": "semiflow",
        "aliases": [
          "Semi Flow",
          "SFL",
          "semiflow"
        ],
        "extensions": [
          ".sfl",
          ".sfli",
          ".sflc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "semiflow",
        "scopeName": "source.sfl",
        "path": "./syntaxes/semiflow.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "semiflow",
        "path": "./snippets/semiflow.snippets.json"
      }
    ],
    "commands": [
      {
        "command": "semiflow.compile",
        "title": "Compile SFL to XState JSON",
        "category": "SemiFlow"
      },
      {
        "command": "semiflow.visualize",
        "title": "Visualize State Machine",
        "category": "SemiFlow"
      },
      {
        "command": "semiflow.visualizeJson",
        "title": "Visualize XState JSON",
        "category": "SemiFlow"
      },
      {
        "command": "semiflow.restartServer",
        "title": "Restart Language Server",
        "category": "SemiFlow"
      }
    ],
    "configuration": {
      "title": "SemiFlow",
      "properties": {
        "semiflow.languageServerPath": {
          "type": "string",
          "default": "",
          "description": "Path to SemiFlow2.LanguageServer DLL. Auto-detected if empty."
        },
        "semiflow.dotnetPath": {
          "type": "string",
          "default": "dotnet",
          "description": "Path to dotnet executable."
        },
        "semiflow.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the SFL language server."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == semiflow",
          "command": "semiflow.compile",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == semiflow",
          "command": "semiflow.visualize",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == json || resourceLangId == jsonc",
          "command": "semiflow.visualizeJson",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^5.3.0"
  }
}
