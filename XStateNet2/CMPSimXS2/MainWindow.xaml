<Window x:Class="CMPSimXS2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CMPSimXS2.Helpers"
        xmlns:controls="clr-namespace:CMPSimXS2.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CMPSimXS2.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="CMP Simulator - XStateNet2" Height="800" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Station Template: Box (outer border) + Circle (status indicator) -->
        <DataTemplate x:Key="StationTemplate">
            <!-- Box: Outer Border -->
            <Border Background="{Binding BoxBrush}"
                    BorderBrush="{Binding BoxBorderBrush}"
                    BorderThickness="{Binding BoxBorderThickness}"
                    CornerRadius="5"
                    Padding="15"
                    Margin="5"
                    Width="{Binding Width}"
                    Height="{Binding Height}">
                <StackPanel VerticalAlignment="Center">
                    <!-- Station Title (at head position) -->
                    <TextBlock Text="{Binding Name}"
                               FontWeight="Bold"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="#007ACC"
                               Margin="0,0,0,8"/>

                    <!-- Circle: Status Indicator with Wafer Number -->
                    <Grid Width="{Binding CircleSize}"
                          Height="{Binding CircleSize}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8">

                        <!-- Circle background (colored by process step) -->
                        <Ellipse Fill="{Binding CircleBrush}"
                                 Stroke="#333"
                                 StrokeThickness="2"/>

                        <!-- Wafer Number inside circle -->
                        <TextBlock Text="{Binding CurrentWafer, TargetNullValue='-'}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="3"
                                                  ShadowDepth="1"
                                                  Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!-- Remaining Time Display (for Polisher and Cleaner) -->
                    <TextBlock Text="{Binding RemainingTime}"
                               FontSize="9"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="#CC6600"
                               Margin="0,0,0,3">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RemainingTime}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Current State -->
                    <TextBlock Text="{Binding CurrentState}"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Foreground="#666"
                               FontStyle="Italic"
                               Margin="0,0,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Button x:Name="StartButton" Content="â–¶ Start" Style="{StaticResource ControlButtonStyle}" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="â¸ Pause" Style="{StaticResource ControlButtonStyle}" Click="StopButton_Click" IsEnabled="False"/>
                    <Button x:Name="ResetButton" Content="â†» Reset" Style="{StaticResource ControlButtonStyle}" Click="ResetButton_Click"/>
                </StackPanel>

                <!-- Title -->
                <TextBlock Grid.Column="1" Text="CMP Simulator - XStateNet2" FontSize="18" FontWeight="Bold"
                          HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#333333"/>

                <!-- Statistics -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock x:Name="StatisticsTextBlock" Text="{Binding Status}" FontSize="11" FontFamily="Consolas"
                              Foreground="#007ACC" FontWeight="SemiBold" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area (State Tree + Simulation + Property Panel) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- State Tree Panel (Left) -->
            <Border Grid.Column="0" Background="White" BorderBrush="#CCCCCC" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                        <TextBlock Text="State Tree" FontWeight="Bold" Margin="10,5" VerticalAlignment="Center"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <TreeView x:Name="StateTreeView" BorderThickness="0" Background="Transparent" Margin="5">
                            <!-- State tree will be populated in code-behind -->
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- GridSplitter for resizing State Tree -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#CCCCCC"
                          ShowsPreview="False"/>

            <!-- Simulation Area (Center) -->
            <Border Grid.Column="2" Background="#E8E8E8">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="SimulationCanvas" Width="1200" Height="700" Background="White">
                        <!--
                        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                        DESIGN-TIME POSITIONING GUIDE
                        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

                        To reposition stations and robots:
                        1. Open: ViewModels/MainViewModel.cs
                        2. Find: InitializeStations() method
                        3. Edit X, Y values for each station/robot:

                           LoadPort:  X = 250,  Y = 30
                           Carrier:   X = 420,  Y = 30
                           Polisher:  X = 590,  Y = 30
                           Cleaner:   X = 760,  Y = 30
                           Buffer:    X = 930,  Y = 30

                           Robot 1:   X = 350 + (i-1)*170,  Y = 300
                           Robot 2:   X = 520,              Y = 300
                           Robot 3:   X = 690,              Y = 300

                        4. Save and rebuild
                        5. Positions will update automatically via data binding

                        Canvas Dimensions: 1200x700
                        Station Size: 150x100 (Width x Height)
                        â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
                        -->

                        <!-- Carrier Wafer Grid Section (5x5) -->
                        <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="30,30,0,0"
                                VerticalAlignment="Top" Height="240" HorizontalAlignment="Left" Width="190">
                            <StackPanel>
                                <TextBlock Text="Carrier Wafer Grid" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#007ACC"/>
                                <controls:WaferGridControl Wafers="{Binding Wafers}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Stations - Positioned on Canvas via X, Y properties -->
                        <ItemsControl ItemsSource="{Binding Stations}" ItemTemplate="{StaticResource StationTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>

                        <!-- Robots - Positioned on Canvas -->
                        <ItemsControl ItemsSource="{Binding Robots}" ItemTemplate="{StaticResource StationTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                        </ItemsControl>

                        <!-- State Legend -->
                        <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15"
                                Margin="30,540,30,30" VerticalAlignment="Top" Height="90">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="State Legend:  " FontWeight="Bold" Margin="0,0,15,0"/>
                                <Border Background="#90EE90" Padding="8,4" Margin="3,0" CornerRadius="3">
                                    <TextBlock Text="Idle" FontSize="11"/>
                                </Border>
                                <Border Background="#6495ED" Padding="8,4" Margin="3,0" CornerRadius="3">
                                    <TextBlock Text="Loaded" FontSize="11" Foreground="White"/>
                                </Border>
                                <Border Background="#FF6347" Padding="8,4" Margin="3,0" CornerRadius="3">
                                    <TextBlock Text="Processing" FontSize="11" Foreground="White"/>
                                </Border>
                                <Border Background="#98FB98" Padding="8,4" Margin="3,0" CornerRadius="3">
                                    <TextBlock Text="Done" FontSize="11"/>
                                </Border>
                                <Border Background="#FFD700" Padding="8,4" Margin="3,0" CornerRadius="3">
                                    <TextBlock Text="Occupied" FontSize="11"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- GridSplitter for resizing Simulation -->
            <GridSplitter Grid.Column="3"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#CCCCCC"
                          ShowsPreview="False"/>

            <!-- Property Panel (Right) -->
            <Border Grid.Column="4" Background="White" BorderBrush="#CCCCCC" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                        <Grid>
                            <TextBlock Text="Statistics &amp; Control" FontWeight="Bold" Margin="10,5" VerticalAlignment="Center"/>
                            <Button Content="ðŸ“„ Open Log File" HorizontalAlignment="Right" Margin="0,0,10,0" Padding="8,3" FontSize="11" Click="OpenLogFileButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Property Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="15">
                                <!-- Real-time Statistics Section -->
                                <Border Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ“Š Wafer Statistics" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Foreground="#007ACC"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Total:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WaferCount}" FontFamily="Consolas" Margin="0,0,0,5"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Processed:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ProcessedWafers}" FontFamily="Consolas" Margin="0,0,0,5"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Remaining:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" FontFamily="Consolas" Margin="0,0,0,5">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}">
                                                        <Binding Path="WaferCount"/>
                                                        <Binding Path="ProcessedWafers"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Separator Margin="0,0,0,15"/>

                                <!-- Control Section -->
                                <TextBlock Text="Simulation Control" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Wafer Count:" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding WaferCount, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalAlignment="Center" Padding="5,3"/>
                                </Grid>

                                <Button Content="Process Wafer" Command="{Binding ProcessWaferCommand}"
                                        Style="{StaticResource ControlButtonStyle}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
