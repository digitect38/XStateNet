<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- State Colors -->
    <SolidColorBrush x:Key="IdleStateBrush" Color="#90EE90"/>
    <SolidColorBrush x:Key="BusyStateBrush" Color="#FFD700"/>
    <SolidColorBrush x:Key="ProcessingStateBrush" Color="#FF6347"/>
    <SolidColorBrush x:Key="WaitingStateBrush" Color="#87CEEB"/>
    <SolidColorBrush x:Key="CompletedStateBrush" Color="#98FB98"/>
    <SolidColorBrush x:Key="ErrorStateBrush" Color="#FF4444"/>

    <!-- Component Colors -->
    <SolidColorBrush x:Key="CarrierBrush" Color="#4A90E2"/>
    <SolidColorBrush x:Key="PolisherBrush" Color="#E94B3C"/>
    <SolidColorBrush x:Key="CleanerBrush" Color="#50C878"/>
    <SolidColorBrush x:Key="BufferBrush" Color="#F5A623"/>
    <SolidColorBrush x:Key="RobotBrush" Color="#9013FE"/>

    <!-- UI Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#4A90E2"/>

</ResourceDictionary>
