<UserControl x:Class="CMPSimXS2.Controls.WaferGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="130" Height="156">
    <Border BorderBrush="#007ACC"
            BorderThickness="2"
            Background="White"
            CornerRadius="5"
            Padding="5">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock x:Name="TitleTextBlock"
                       Grid.Row="0"
                       Text="Carrier (25 Wafers)"
                       FontWeight="Bold"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,3"
                       Foreground="#007ACC"/>

            <!-- 5x5 Wafer Grid -->
            <Canvas x:Name="WaferCanvas"
                    Grid.Row="1"
                    Width="120"
                    Height="120"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#F8F8F8"/>

            <!-- Status Text -->
            <TextBlock x:Name="StatusTextBlock"
                       Grid.Row="2"
                       Text="0 Processed / 0 Remaining"
                       FontSize="9"
                       HorizontalAlignment="Center"
                       Margin="0,3,0,0"
                       Foreground="#666"/>
        </Grid>
    </Border>
</UserControl>
