<Window x:Class="SemiStandard.Simulator.Wpf.UmlTimingDiagramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UML Timing Diagram - Multi-State Machine View" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartTimelineVariant" 
                                           VerticalAlignment="Center" 
                                           Foreground="#BB86FC"
                                           Width="28" Height="28"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="UML Timing Diagram" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White"
                             VerticalAlignment="Center"/>
                    <TextBlock Text=" - Swimming Lane View" 
                             FontSize="16" 
                             Foreground="#BB86FC"
                             VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Zoom Controls -->
                    <TextBlock Text="Zoom:" 
                             Foreground="White" 
                             VerticalAlignment="Center"
                             Margin="10,0,5,0"/>
                    <Slider x:Name="ZoomSlider" 
                          Minimum="0.5" Maximum="3" Value="1"
                          Width="100"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                    <TextBlock x:Name="ZoomText" 
                             Text="100%" 
                             Foreground="White" 
                             VerticalAlignment="Center"
                             Width="40"
                             Margin="0,0,10,0"/>
                    
                    <Separator Style="{StaticResource MaterialDesignDarkSeparator}" 
                             Margin="10,0"/>
                    
                    <CheckBox x:Name="AutoScrollCheck" 
                            Content="Auto Scroll" 
                            IsChecked="True"
                            Foreground="White"
                            Margin="10,0"/>
                    
                    <CheckBox x:Name="ShowGridCheck" 
                            Content="Show Grid" 
                            IsChecked="True"
                            Foreground="White"
                            Margin="10,0"/>
                    
                    <Button x:Name="RefreshButton" 
                          Click="RefreshButton_Click"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Margin="10,0,5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="CloseButton" 
                          Click="CloseButton_Click"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Close" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="#252526">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Swimming Lane Headers (Fixed) -->
            <Border Grid.Column="0" 
                  Background="#2A2A2A"
                  BorderBrush="#404040"
                  BorderThickness="0,0,2,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Time Header Label -->
                    <Border Grid.Row="0" 
                          Background="#333333"
                          BorderBrush="#505050"
                          BorderThickness="0,0,0,1">
                        <TextBlock Text="State Machines / Time" 
                                 FontSize="12"
                                 FontWeight="Bold"
                                 Foreground="#BB86FC"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Lane Headers -->
                    <ScrollViewer Grid.Row="1" 
                                x:Name="LaneHeaderScroller"
                                VerticalScrollBarVisibility="Hidden"
                                HorizontalScrollBarVisibility="Disabled">
                        <Canvas x:Name="LaneHeaderCanvas" 
                              Background="#2A2A2A"
                              ClipToBounds="True"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Timing Diagram Area (Scrollable) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Time Axis -->
                <Border Grid.Row="0" 
                      Background="#333333"
                      BorderBrush="#505050"
                      BorderThickness="0,0,0,1">
                    <ScrollViewer x:Name="TimeAxisScroller"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Disabled">
                        <Canvas x:Name="TimeAxisCanvas" 
                              Height="50"
                              Background="#333333"
                              ClipToBounds="True"/>
                    </ScrollViewer>
                </Border>
                
                <!-- Main Diagram Canvas -->
                <ScrollViewer Grid.Row="1"
                            x:Name="DiagramScroller"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto"
                            ScrollChanged="DiagramScroller_ScrollChanged">
                    <Canvas x:Name="DiagramCanvas" 
                          Background="#1E1E1E"
                          ClipToBounds="True"
                          SnapsToDevicePixels="True"
                          UseLayoutRounding="True">
                        <Canvas.LayoutTransform>
                            <ScaleTransform x:Name="DiagramScale" 
                                          ScaleX="1" ScaleY="1"/>
                        </Canvas.LayoutTransform>
                    </Canvas>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Height="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                         x:Name="StatusText"
                         Text="Ready" 
                         Foreground="White" 
                         FontSize="12"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
                
                <TextBlock Grid.Column="2" 
                         x:Name="TimeRangeText"
                         Text="Time Range: 0s - 60s" 
                         Foreground="White" 
                         FontSize="12"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
                
                <TextBlock Grid.Column="3" 
                         x:Name="MachineCountText"
                         Text="0 State Machines" 
                         Foreground="White" 
                         FontSize="12"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
                
                <TextBlock Grid.Column="4" 
                         x:Name="LastUpdateText"
                         Text="Last Update: Never" 
                         Foreground="White" 
                         FontSize="12"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>