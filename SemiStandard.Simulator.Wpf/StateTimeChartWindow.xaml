<Window x:Class="SemiStandard.Simulator.Wpf.StateTimeChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="State Time Analysis" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartDonut" 
                                           VerticalAlignment="Center" 
                                           Foreground="#BB86FC"
                                           Width="24" Height="24"
                                           Margin="0,0,10,0"/>
                    <TextBlock Text="State Time Analysis: " 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="White"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="MachineNameText" 
                             Text="EquipmentController" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="#BB86FC"
                             VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ComboBox x:Name="ChartTypeCombo" 
                            SelectedIndex="1"
                            Margin="10,0"
                            materialDesign:HintAssist.Hint="Chart Type"
                            Style="{StaticResource MaterialDesignComboBox}">
                        <ComboBoxItem>Bar View</ComboBoxItem>
                        <ComboBoxItem>Timeline</ComboBoxItem>
                    </ComboBox>
                    
                    <Button x:Name="RefreshButton" 
                          Click="RefreshButton_Click"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="CloseButton" 
                          Click="CloseButton_Click"
                          Style="{StaticResource MaterialDesignFlatButton}"
                          Margin="5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                            <TextBlock Text="Close" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Chart Area -->
            <Border Grid.Column="0" Background="#252526" Margin="10" ClipToBounds="True">
                <Grid ClipToBounds="True">
                    <!-- Simple Visual Chart Replacement -->
                    <ScrollViewer x:Name="SimpleChartViewer" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="SimpleChartPanel" Margin="20">
                            <TextBlock Text="State Time Visualization" 
                                     FontSize="18" FontWeight="Bold" 
                                     Foreground="White" 
                                     HorizontalAlignment="Center" 
                                     Margin="0,0,0,20"/>
                            
                            <!-- Simple bar visualization will be added here programmatically -->
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Timeline Chart -->
                    <Grid x:Name="TimelineContainer" Visibility="Collapsed" ClipToBounds="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Fixed State Header Panel -->
                        <Border Grid.Column="0" 
                              Background="#2A2A2A"
                              BorderBrush="#404040"
                              BorderThickness="0,0,1,0"
                              ClipToBounds="True">
                            <ScrollViewer x:Name="HeaderScroller"
                                        VerticalScrollBarVisibility="Hidden"
                                        HorizontalScrollBarVisibility="Disabled">
                                <Canvas x:Name="StateHeaderCanvas" 
                                      Width="200"
                                      ClipToBounds="True"
                                      SnapsToDevicePixels="True"
                                      UseLayoutRounding="True"/>
                            </ScrollViewer>
                        </Border>
                        
                        <!-- Timeline Scroll Area -->
                        <ScrollViewer Grid.Column="1"
                                    x:Name="TimelineScroller" 
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    ClipToBounds="True"
                                    ScrollChanged="TimelineScroller_ScrollChanged">
                            <Canvas x:Name="TimelineCanvas" 
                                  Height="600" 
                                  Background="#1E1E1E"
                                  ClipToBounds="True"
                                  SnapsToDevicePixels="True"
                                  UseLayoutRounding="True"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Statistics Panel -->
            <Border Grid.Column="1" Background="#252526" Margin="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Statistics" 
                                 FontSize="14" 
                                 FontWeight="Bold" 
                                 Foreground="#BB86FC"
                                 Margin="0,0,0,15"/>
                        
                        <!-- Total Time -->
                        <Border Background="#1E1E1E" 
                              CornerRadius="5" 
                              Padding="10" 
                              Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="Total Tracked Time" 
                                         FontSize="11" 
                                         Foreground="#808080"/>
                                <TextBlock x:Name="TotalTimeText" 
                                         Text="0.0 seconds" 
                                         FontSize="16" 
                                         FontWeight="Bold" 
                                         Foreground="White"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Number of Transitions -->
                        <Border Background="#1E1E1E" 
                              CornerRadius="5" 
                              Padding="10" 
                              Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="Total Transitions" 
                                         FontSize="11" 
                                         Foreground="#808080"/>
                                <TextBlock x:Name="TransitionCountText" 
                                         Text="0" 
                                         FontSize="16" 
                                         FontWeight="Bold" 
                                         Foreground="White"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Current State -->
                        <Border Background="#1E1E1E" 
                              CornerRadius="5" 
                              Padding="10" 
                              Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="Current State" 
                                         FontSize="11" 
                                         Foreground="#808080"/>
                                <TextBlock x:Name="CurrentStateText" 
                                         Text="UNKNOWN" 
                                         FontSize="14" 
                                         FontWeight="Bold" 
                                         Foreground="#03DAC6"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- State Breakdown -->
                        <TextBlock Text="State Time Distribution" 
                                 FontSize="12" 
                                 FontWeight="Bold" 
                                 Foreground="#BB86FC"
                                 Margin="0,15,0,10"/>
                        
                        <ItemsControl x:Name="StateBreakdownList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                          BorderBrush="{Binding StateColor}"
                                          BorderThickness="0,0,0,2"
                                          CornerRadius="3" 
                                          Padding="8" 
                                          Margin="0,3">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- State Name and Percentage -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <Rectangle Width="4" Height="16" 
                                                         Fill="{Binding StateColor}" 
                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding StateName}" 
                                                         FontWeight="Bold" 
                                                         FontSize="12"
                                                         Foreground="{Binding StateColor}"/>
                                                <TextBlock Text=" - " 
                                                         Foreground="#808080"/>
                                                <TextBlock Text="{Binding Percentage}" 
                                                         FontWeight="Bold"
                                                         Foreground="White"/>
                                            </StackPanel>
                                            
                                            <!-- Time Spent -->
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,2,0,0">
                                                <materialDesign:PackIcon Kind="Clock" 
                                                                       Width="12" Height="12" 
                                                                       Foreground="#808080"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Time: " 
                                                         FontSize="10"
                                                         Foreground="#808080"/>
                                                <TextBlock Text="{Binding TimeSpent}" 
                                                         FontSize="10"
                                                         Foreground="White"/>
                                            </StackPanel>
                                            
                                            <!-- Transition Count -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,0,0,0">
                                                <materialDesign:PackIcon Kind="SwapHorizontal" 
                                                                       Width="12" Height="12" 
                                                                       Foreground="#808080"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Transitions: " 
                                                         FontSize="10"
                                                         Foreground="#808080"/>
                                                <TextBlock Text="{Binding TransitionCount}" 
                                                         FontSize="10"
                                                         Foreground="White"/>
                                            </StackPanel>
                                            
                                            <!-- Visual Progress Bar -->
                                            <ProgressBar Grid.Row="3"
                                                       Value="{Binding PercentageValue}" 
                                                       Maximum="100"
                                                       Height="6"
                                                       Margin="0,4,0,0"
                                                       Foreground="{Binding StateColor}"
                                                       Background="#0F0F0F"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                         x:Name="StatusText"
                         Text="Ready" 
                         Foreground="White" 
                         FontSize="11"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
                
                <TextBlock Grid.Column="2" 
                         x:Name="LastUpdateText"
                         Text="Last Update: Never" 
                         Foreground="White" 
                         FontSize="11"
                         VerticalAlignment="Center"
                         Margin="10,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>