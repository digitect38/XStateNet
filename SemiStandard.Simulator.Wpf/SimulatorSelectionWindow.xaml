<Window x:Class="SemiStandard.Simulator.Wpf.SimulatorSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Select Simulator" Height="392" Width="667"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="0,0,10,60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="603*"/>
            <ColumnDefinition Width="94*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.ColumnSpan="2" VerticalAlignment="Center" Height="56" Margin="0,0,-9,0">
            <TextBlock Text="SEMI Equipment Simulator Selection" 
                       FontSize="20" FontWeight="Medium"
                       HorizontalAlignment="Center"/>
        </materialDesign:ColorZone>

        <!-- Options -->
        <Grid Grid.Row="1" Margin="32,32,32,32" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- XState Simulator -->
            <materialDesign:Card Grid.Column="0" Padding="16" 
                                 MouseEnter="Card_MouseEnter" 
                                 MouseLeave="Card_MouseLeave"
                                 MouseLeftButtonUp="XStateCard_Click"
                                 Cursor="Hand" Margin="0,0,0,-89">
                <StackPanel>
                    <materialDesign:PackIcon Kind="StateMachine" Width="64" Height="64" 
                                           HorizontalAlignment="Center" Margin="0,0,0,16"
                                           Foreground="DodgerBlue"/>
                    <TextBlock Text="XState Simulator" 
                               FontSize="18" FontWeight="Medium"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray">
                        Advanced state machine-based simulator with visual state charts,
                        JSON script support, and full SEMI standards compliance.
                        Ideal for complex scenarios and testing.
                    </TextBlock>
                </StackPanel>
            </materialDesign:Card>

            <!-- Realistic Simulator -->
            <materialDesign:Card Grid.Column="1" Padding="16"
                                 MouseEnter="Card_MouseEnter" 
                                 MouseLeave="Card_MouseLeave"
                                 MouseLeftButtonUp="RealisticCard_Click"
                                 Cursor="Hand" Margin="32,0,0,-89" Grid.ColumnSpan="2">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Chip" Width="64" Height="64" 
                                           HorizontalAlignment="Center" Margin="0,0,0,16"
                                           Foreground="MediumSeaGreen"/>
                    <TextBlock Text="Photolithography Simulator" 
                               FontSize="18" FontWeight="Medium"
                               HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray">
                        ASML-XT1900Gi photolithography equipment simulator with
                        realistic wafer processing, carrier management, and
                        production metrics. Perfect for demonstrations.
                    </TextBlock>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Margin="276,59,0,-27">
            <Button x:Name="CancelButton" Content="CANCEL" 
                    Background="Transparent" BorderThickness="0"
                    Click="CancelButton_Click" RenderTransformOrigin="0.498,1.281"/>
        </StackPanel>
    </Grid>
</Window>